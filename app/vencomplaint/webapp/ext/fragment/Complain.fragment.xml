<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id = "mainvbox" class = "customVbox">
        <Label text="Selected Vendor Code:"/>
        <Text id="vencode"  class = "vencode" text="Value" />
        <Label text="Selected PO Number is:"/>
        <Text id="pono" class = "pono" text="Value"/>
        <Label text="Complain is about:"/>
        <Select id="ordr" name="purch_ordr">
            <core:Item key="DP" text="Delay in Payment"/>
            <core:Item key="WP" text="Wrong Payment"/>
            <core:Item key="TDSI" text="TDS issue"/>
            <core:Item key="GSTI" text="GST issue"/>
            <core:Item key="Others" text="Others"/>
        </Select>
        <Label text="Describe your Complain:"/>
        <TextArea id="desc"  width = "100%" height = "130px"/>
		<!-- <Button core:require="{ handler: 'project1/ext/fragment/Complaint'}" text="Complaint" press="handler.onPress" /> -->
	</VBox>
</core:FragmentDefinition>